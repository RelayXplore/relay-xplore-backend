{
  "name": "@relayxplore/backend",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "build:ci": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/src/main",
    "dev": "nest start --watch",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\"",
    "lint:fix": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "NODE_ENV=test jest -u --coverage --detectOpenHandles  --no-cache --runInBand --forceExit",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "audit-ci": "audit-ci --config audit-ci.jsonc",
    "typeorm-cli": "ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli -d ormconfig.ts",
    "migrate:run": "npm run typeorm-cli migration:run",
    "migrate:revert": "npm run typeorm-cli migration:revert",
    "migrate:create": "ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli migration:create ./src/database/migrations/$npm_config_name",
    "pm2:start:prod": "pm2 start pm2.prod.json",
    "pm2:start:staging": "pm2 start pm2.staging.json",
    "pm2:deploy:prod": "npm run build && pm2 start pm2.prod.json",
    "pm2:deploy:staging": "npm run build && pm2 start pm2.staging.json",
    "pm2:deploy:prod:cron": "pm2 restart pm2.prod.cron.json",
    "pm2:deploy:staging:cron": "pm2 restart pm2.staging.cron.json",
    "pm2:stop:prod:cron": "pm2 stop pm2.prod.cron.json",
    "pm2:stop:staging:cron": "pm2 stop pm2.staging.cron.json",
    "pm2:stop:prod": "pm2 stop pm2.prod.json",
    "docker:dev:up": "docker compose -f docker-compose.dev.yml up --build",
    "docker:dev:down": "docker compose -f docker-compose.dev.yml down",
    "docker:prod:up": "docker compose -f docker-compose.prod.yml up --build -d",
    "docker:prod:down": "docker compose -f docker-compose.prod.yml down",
    "docker:prod:logs": "docker compose -f docker-compose.prod.yml logs -f"
  },
  "dependencies": {
    "@nestjs/cache-manager": "^3.0.0",
    "@nestjs/common": "^11.0.3",
    "@nestjs/config": "^4.0.0",
    "@nestjs/core": "^11.0.3",
    "@nestjs/jwt": "^11.0.0",
    "@nestjs/passport": "^11.0.4",
    "@nestjs/platform-express": "^11.0.3",
    "@nestjs/schedule": "^5.0.0",
    "@nestjs/swagger": "^11.0.2",
    "@nestjs/typeorm": "^11.0.0",
    "axios": "^1.7.7",
    "cache-manager": "^6.3.2",
    "cache-manager-redis-store": "3.0.1",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "cookie-parser": "^1.4.7",
    "dayjs": "1.11.9",
    "ethers": "^6.13.4",
    "helmet": "^8.0.0",
    "joi": "^17.13.3",
    "js-yaml": "^4.1.0",
    "jsonwebtoken": "^9.0.2",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "pg": "^8.13.0",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^7.2.0",
    "typeorm": "^0.3.17",
    "web3": "^4.14.0",
    "winston": "^3.15.0"
  },
  "devDependencies": {
    "@nestjs/cli": "^8.0.0",
    "@nestjs/schematics": "^8.0.0",
    "@nestjs/testing": "^11.0.3",
    "@types/cache-manager": "4.0.1",
    "@types/cache-manager-redis-store": "2.0.1",
    "@types/cookie-parser": "^1.4.7",
    "@types/express": "^4.17.13",
    "@types/jest": "^27.0.1",
    "@types/js-yaml": "^4.0.9",
    "@types/lodash": "^4.17.11",
    "@types/node": "^16.0.0",
    "@types/passport-jwt": "^4.0.1",
    "@types/supertest": "^2.0.11",
    "@typescript-eslint/eslint-plugin": "^4.28.2",
    "@typescript-eslint/parser": "^4.28.2",
    "audit-ci": "^7.1.0",
    "eslint": "^7.30.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^3.4.0",
    "jest": "^27.0.6",
    "prettier": "^2.3.2",
    "supertest": "^6.1.3",
    "ts-jest": "^27.0.3",
    "ts-loader": "^9.2.3",
    "ts-node": "^10.0.0",
    "tsconfig-paths": "^3.15.0",
    "typescript": "^4.3.5"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  },
  "packageManager": "yarn@1.22.19"
}
